<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
	android:background="@drawable/unicomsdk_btn_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <!-- 本机号码一键登录 -->
        <TextView
            android:id="@+id/unicomsdk_quick_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/unicomsdk_quick_login"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/unicomsdk_btn_loading_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/unicomsdk_dimen_ten"
        android:visibility="gone" 
        android:src="@drawable/unicomsdk_load_dot_white" />
</RelativeLayout>